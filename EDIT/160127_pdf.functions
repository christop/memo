function TITLE() {

  NBSPACE="N${RANDOM}B"

  echo -e "\n\n\n\n" >> $SRCDUMP
  echo "$*" | # KEEP (MULTIPLE) SPACES
  sed -e "s/\([a-zA-Z_*]\)\( \)\([a-zA-Z_*]\)/\1 $NBSPACE \3/g" | #
  pandoc -r markdown -w latex | #
  sed ':a;N;$!ba;s/\n/ /g'      | #      
  sed "s/[ ]*${NBSPACE}[ ]*/~/g"  | #
  sed 's/^/\\chapter{/' | sed 's/$/}/' >> $SRCDUMP
  write2src ""

}

